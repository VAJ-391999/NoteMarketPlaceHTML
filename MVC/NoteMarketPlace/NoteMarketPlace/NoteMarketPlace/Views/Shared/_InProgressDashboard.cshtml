@model IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>

<!-- Dashboard progress -->
<section id="dashboard-middle">

    <div class="container dashboard">

        <!-- Heading -->
        <div class="row">

            <!-- Title -->
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                <div class="dashboar-heading">
                    <h4><b>In Progress Notes</b></h4>
                </div>
            </div>

            <!-- button  <form class="form-inline ml-auto pull-right">-->
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                @ViewBag.NotFound
                <form class="form-inline ml-auto pull-right">
                    <div class="md-form my-0 search-wrapper">
                        <img src="~/Content/images/Dashboard/search.jpg" alt="search">
                        <input class="form-control" type="text" id="searchbar" placeholder="Search..." aria-label="Search" value="@ViewData["GetSearchProgess"]" name="searchingProgress">
                    </div>

                    <!-- Profile Button -->
                    <button href="#" type="submit" class="btn btn-primary search-btn text-uppercase text-center"><b>Search</b></button>
                </form>

            </div>

        </div>

        <!-- Table -->
        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 table-responsive-xl">

                <table class="table">
                    <thead>
                        <tr class="text-uppercase">
                            <th scope="col">Added date</th>
                            <th scope="col">
                                @Html.ActionLink("Title", "Dashboard", new { SortOrder1 = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy1 = "Title" })
                            </th>
                            <th scope="col">
                                @Html.ActionLink("Category", "Dashboard", new { SortOrder1 = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy1 = "Category" })
                            </th>
                            <th scope="col">
                                @Html.ActionLink("Status", "Dashboard", new { SortOrder1 = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy1 = "Status" })
                            </th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (NoteMarketPlace.Models.NoteDetailsViewModel item in (IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>)Model)
                        {
                            <tr>
                                <td>10-10-2020</td>
                                <td>@item.note.NoteTitle</td>
                                <td>@item.note.CourseName</td>
                                <td>@item.referenceData.Value</td>
                                @if (item.note.Status == 6)
                                {
                                    <td><a href="/User/AddNotes?nId=@item.note.NoteID"><img src="~/Content/images/Dashboard/edit.png" alt="edit"></a><a href="/User/DeleteConform?deleteId=@item.note.NoteID" onclick="confirm('Are you sure you want to delete this note?')"><img src="~/Content/images/Front_images/images/delete.png" alt="delete" id="deleteConform"></a></td>
                                }
                                else
                                {
                                    <td><a href="/User/NoteDetails?noteName=@item.note.NoteTitle"><img src="~/Content/images/Dashboard/eye.png" alt="see"></a></td>
                                }


                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</section>
