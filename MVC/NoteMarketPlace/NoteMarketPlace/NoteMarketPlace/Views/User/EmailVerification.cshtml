@model NoteMarketPlace.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Data -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Notes Marketplace</title>

    <!-- Fevicon -->
    <link rel="shortcut icon" href="~/Content/images/Front_images/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Font Aweasome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

</head>

<body>

    <section id="email-verification">

        <div class="container">

            <div class="row justify-content-center">

                <div class="col-lg-6 col-md-6 col-sm-8 col-10">
                    <div class="image">
                        <img src="~/Content/images/pre-login/top-purple-logo.jpeg">
                    </div>
                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-6 col-sm-8 col-10">
                    <div class="verification-content">
                        <div class="email-content">
                            <h2>Email Varification</h2>
                            <h6>Dear @ViewBag.FirstName ,</h6>
                            <p>Thanks for Signing Up!<br>Simply click below for email verify.</p>
                        </div>
                        <!-- Verify Email button verify email address(-->
                        <button type="button" class="btn btn-primary btn-lg btn-block verify-email-btn text-uppercase text-center"><a href="/User/Index">verify email address</a></button>
                    </div>
                </div>
            </div>

        </div>

    </section>

    <!-- JQuery All Files -->
    <!-- JQuery JS -->
    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custome JS -->
    <script src="~/Scripts/js/script.js"></script>
</body>
</html>
