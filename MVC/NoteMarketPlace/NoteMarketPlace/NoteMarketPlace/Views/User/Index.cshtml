@model NoteMarketPlace.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Data -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Notes Marketplace</title>

    <!-- Fevicon -->
    <link rel="shortcut icon" href="~/Content/images/Front_images/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

</head>

<body>

    <!-- Login -->
    <section id="login">

        <div class="container">

            <!-- Logo -->
            <div class="row justify-content-center">

                <div class="col-md-8 col-sm-12 col-12 col-lg-6 text-center logo-image">

                    <img src="~/Content/images/pre-login/top-logo.png">

                </div>

            </div>

            <!-- Form Content -->
            <div class="row justify-content-center">

                <div class="col-md-8 col-sm-12 col-12 col-lg-6">

                    <div id="login-box">

                        <form class="form-container" method="post">

                            <h2 class="text-center">Login</h2>
                            <p class="text-center para1">Enter your email address and password to login</p>

                            <div id="form-content">
                                <!-- Email-Block -->
                                <div class="form-group email-block">
                                    <label class="mylabel" for="emailAddress1">Email</label>
                                    <!--<input type="email" class="form-control" id="emailAddress1" placeholder="Enter Your Email Address">-->
                                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @id = "emailAddress1", @placeholder = "Enter Your Email Address",@Value = ViewBag.email })
                                    @Html.ValidationMessageFor(m => m.EmailID)
                                    @ViewBag.id
                                </div>

                                <!-- Password-Block -->
                                <div class="form-group password-block">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-5">
                                            <label class="mylabel" for="password1">Password</label>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-7 forgot-link text-right">
                                            <a href="/User/ForgetPassword">Forgot Password?</a>
                                        </div>
                                    </div>
                                    <div class="wrapper">
                                        <!--<input type="password" class="form-control" id="password1" placeholder="Enter Your Password">-->
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "password1", @name = "Password", @placeholder = "Enter Your password", @type = "password", @Value = ViewBag.password })
                                        <img src="~/Content/images/pre-login/eye.png" alt="show" id="togglepassword">
                                    </div>
                                </div>
                                <div class="field-validation-error">
                                    @Html.DisplayFor(m => m.LoginErrorMessage, new { @class = "incorrect-password" })
                                </div>

                                <!-- Incorrect Password
                                <div class="incorrect-password">
                                    <p>@Html.DisplayFor(m => m.LoginErrorMessage, new { @class = "incorrect-password" })</p>
                                </div>-->

                                <!-- Remember-Block -->
                            <div class="form-group form-check remember-block">
                                <!--<input type="checkbox" class="form-check-input" id="exampleCheck1" name="RememberMe">-->
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @id = "exampleCheck1" })
                                <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                            </div>

                                <!-- Login button -->
                                <button type="submit" class="btn btn-primary btn-lg btn-block login-btn text-uppercase text-center">Login</button>
                                <p class="text-center">Don't have an account?<a href="/User/SignUp"> Sign Up</a></p>

                            </div>
                        </form>

                    </div>


                </div>

            </div>

        </div>

    </section>


    <!-- JQuery All Files -->
    <!-- JQuery JS -->
    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>

    <script src="~/bundles/jqueryval"></script>
    
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>



    <!-- Custome JS -->
    <script src="~/Scripts/js/script.js"></script>

</body>

</html>
