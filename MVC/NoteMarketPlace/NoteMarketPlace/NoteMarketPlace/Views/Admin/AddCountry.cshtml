@model NoteMarketPlace.Models.NoteDetailsViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using NoteMarketPlace.Models;



        <!-- Admin profile -->
        <section id="admin-profile">

            <div class="container add-country">

                @using (Html.BeginForm("AddCountry", "Admin", FormMethod.Post))
                {
                    <!-- Heading -->
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">

                            <div class="dashboar-heading">
                                <h2>Add Country</h2>
                            </div>

                        </div>

                    </div>

                    <div class="row">

                        <!-- Catagory -->
                        <div class="col-lg-7 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label class="mylabel" for="firstname">Country *</label>
                                @*<input type="text" class="form-control" id="firstname" placeholder="Enter your country" required>*@
                                @Html.TextBoxFor(m => m.countryDetails.CountryName, new { @class = "form-control", @id = "firstname", @placeholder = "Enter your country" })
                                <p class="field-validation-error">@ViewBag.nameerr</p>
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <!-- Description -->
                        <div class="col-lg-7 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label class="mylabel" for="lastname">Country Code *</label>
                                @*<input type="text" class="form-control" id="lastname" placeholder="Enter your country code" required>*@
                                @Html.TextAreaFor(m => m.countryDetails.CountryCode, new { @class = "form-control", @id = "lastname", @placeholder = "Enter your country code" })
                                <p class="field-validation-error">@ViewBag.descriptionerr</p>
                            </div>
                        </div>

                    </div>

                    <!-- Profile Button -->
                    <button type="submit" class="btn btn-primary profile-btn text-uppercase text-center"><b>submit</b></button>

                }

                </div>


        </section>

    